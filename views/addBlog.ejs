<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('./partials/head') %>
		<title>Add Blog</title>
		<style>
			.addBlog {
				margin-top: 4rem;
			}
		</style>
	</head>
	<body>
		<%- include('./partials/nav') %>
		<div class="container addBlog">
			<form action="/blog" method="post" enctype="multipart/form-data">
				<div class="mt-3">
					<label for="coverImage" class="form-label"
						>CoverImage</label
					>
					<input
						type="file"
						class="form-control"
						id="coverImage"
						name="coverImage"
						aria-describedby="coverImage"
					/>
				</div>
				<div class="mt-3">
					<label for="title" class="form-label">Title</label>
					<input
						type="text"
						class="form-control"
						id="title"
						name="title"
						aria-describedby="title"
					/>
				</div>
				<div class="mt-3">
					<label for="body">Body</label>
					<textarea
						class="form-control"
						name="body"
						id="blog"
					></textarea>
				</div>
				<div class="mt-3">
					<button type="submit" class="btn btn-primary">
						Submit
					</button>
				</div>
			</form>
		</div>
		<%- include('./partials/scripts') %>
	</body>
</html>
